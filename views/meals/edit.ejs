<%- include('../partials/header') %>

    <div class="text-center">
        <h2>Add/Edit Meal(s)</h2>
        <form action="/meals/<%= meal._id %>?_method=PUT" method="POST">
            <div class="col-6 mx-auto">
                <div class="form-group">
                    <label>Date:</label>
                    <input type="date" name="date" class="form-control"
                        value="<%= meal.date.toISOString().slice(0, 10) %>">
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="form-group">
                            <label>Breakfast:</label>
                            <input type="text" name="breakfast" class="form-control" value="<%= meal.breakfast %>">
                        </div>
                        <div class="form-group">
                            <label for="lunch">Lunch:</label>
                            <input type="text" name="lunch" class="form-control" value="<%= meal.lunch %>">
                        </div>
                        <div class="form-group">
                            <label for="dinner">Dinner:</label>
                            <input type="text" name="dinner" class="form-control" value="<%= meal.dinner %>">
                        </div>
                        <div class="form-group">
                            <label for="snacks">Snack(s):</label>
                            <input type="text" name="snacks" class="form-control" value="<%= meal.snacks %>">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Breakfast Calories</label>
                            <input type="number" class="form-control" name="breakfastCals" min="0"
                                value="<%= meal.breakfastCals %>">
                        </div>
                        <div class="form-group">
                            <label>Lunch Calories</label>
                            <input type="number" class="form-control" name="lunchCals" min="0"
                                value="<%= meal.lunchCals %>">
                        </div>
                        <div class="form-group">
                            <label>Dinner Calories</label>
                            <input type="number" class="form-control" name="dinnerCals" min="0"
                                value="<%= meal.dinnerCals %>">
                        </div>
                        <div class="form-group">
                            <label>Snack Calories</label>
                            <input type="number" class="form-control" name="snackCals" min="0"
                                value="<%= meal.snackCals %>">
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Update Info">
            </div>
        </form>
    </div>

    <%- include('../partials/footer') %>