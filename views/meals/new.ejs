<%- include('../partials/header') %>

    <div class="text-center">
        <h2>Add New Meals</h2>
        <form action="/meals" method="POST">
            <div class="col-6 mx-auto">
                <div class="form-group">
                    <label>Date:</label>
                    <input type="date" name="date" class="form-control" required>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="form-group">
                            <label>Breakfast:</label>
                            <input type="text" name="breakfast" class="form-control"
                                placeholder="Enter what you had for breakfast">
                        </div>
                        <div class="form-group">
                            <label for="lunch">Lunch:</label>
                            <input type="text" name="lunch" class="form-control"
                                placeholder="Enter what you had for lunch">
                        </div>
                        <div class="form-group">
                            <label for="dinner">Dinner:</label>
                            <input type="text" name="dinner" class="form-control"
                                placeholder="Enter what you had for dinner">
                        </div>
                        <div class="form-group">
                            <label for="snacks">Snack(s):</label>
                            <input type="text" name="snacks" class="form-control"
                                placeholder="Enter if you had any snacks">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label>Breakfast Calories</label>
                            <input type="number" class="form-control" name="breakfastCals" min="0"
                                placeholder="Breakfast Calories">
                        </div>
                        <div class="form-group">
                            <label>Lunch Calories</label>
                            <input type="number" class="form-control" name="lunchCals" min="0"
                                placeholder="Lunch Calories">
                        </div>
                        <div class="form-group">
                            <label>Dinner Calories</label>
                            <input type="number" class="form-control" name="dinnerCals" min="0"
                                placeholder="Dinner Calories">
                        </div>
                        <div class="form-group">
                            <label>Snack Calories</label>
                            <input type="number" class="form-control" name="snackCals" min="0"
                                placeholder="Snack Calories">
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Add Info">
            </div>
        </form>
    </div>

    <%- include('../partials/footer') %>